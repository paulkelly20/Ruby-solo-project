<h2>Albums for sale</h2>
<table class= "tables">

<tr>
<th>Title </th>
<th>Band </th>
<th>Price </th>
<th>Purchase</th>
<tr/>
<% @albums.each do |album| %>

<tr>
<td><a href="/albums/<%= album.id %>"><%= album.title %></a></td>
<td><a href="/artists/<%= album.artist_id %>"><%= album.find_album_artist_from_id.name %></a></td>
<td>£<%= album.price %></td>
<td><form action="/sale/buy/<%= album.id %>" method="post"><input type="submit" value ="Buy"></form></td>

</tr>
<% end %>


<table class = "tables">
  <tr>
    <th>Till</th>
  </tr>
  <tr>

    <td>£<%= @shop.till %></td>
  </tr>


</table>
